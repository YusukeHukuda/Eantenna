<div class='container col-12 px-5 px-sm-0'>
    <div class="col-md-10 mx-auto">
      <div class="row">
        <h1 class="mt-4 text-center bg-light">投稿一覧</h1>
      </div>

      <table class='table'>
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>タイトル</th>
            <th>本文</th>
            <th>タグ</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <% post.tags.each do |tag| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= link_to post.title, admin_post_path(post) %></td>
            <td><%= post.body.truncate(15) %></td>
            <td><%= tag.name %></td>
          <% end %>
          <% end %>
          <td></td>
          </tr>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
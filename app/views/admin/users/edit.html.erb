<div class="container col-12 mt-4">
  <h1 class="bg-light text-center"><%= @user.name %>さんの会員情報編集</h1>
  <%= render "public/shared/error_messages", resource: @user %>
  <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
    <div class="form-group">
      <div class="row mt-4 offset-md-1">
        <div class="col-lg-2">会員ID</div>
        <div class="col-lg-3"><%= @user.id %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1 mb-1">
        <div class="col-lg-2"><%= f.label :name,"氏名" %></div>
        <div class="col-lg-3"><%= f.text_field :name, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"><%= f.label :email,"メールアドレス" %></div>
        <div class="col-lg-3"><%= f.text_field :email, class: "form-control border-dark" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"><%= f.label :is_deleted,"会員ステータス" %></div>
        <div class="col-lg-3">
          <%= f.radio_button :is_deleted, :false, checked: true %>
          <%= f.label :is_deleted, "有効", value: false %>
          　<%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", value: true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-3 text-center"><%= f.submit "変更を保存", style: 'width:150px', class: "btn btn-outline-success" %></div>
      </div>
    </div>
  <% end %>
</div>
